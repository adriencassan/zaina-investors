<div class="container text-center sign_up_box" style="width: 600; margin-top: 50px, border-width: 3px">
<!-- Single button -->
  <%= simple_form_for [@project, @projectmember] do |f| %>
    <%= f.error_notification %>

      <h2 class="sign_up">Choose a project member</h2>
      <br>
        <%= f.input :user_id, collection: User.where(role: @role), :label_method => :email, label: @role %>
      <br>
      <div class="form-actions">
        <%= f.submit "Submit" %>
      </div>
  <% end %>

</div>
