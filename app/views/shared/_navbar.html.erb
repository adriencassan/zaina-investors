<div class="navbar-wagon navbar-fixed-top" style="font-size: 14px">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "rosace bordeaux.png", height: 50 %>
    <% if user_signed_in? %>
      Welcome <%= current_user.first_name%> <%= current_user.last_name%>
      <%end  %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">


    <!-- Log in button -->
    <div style="color:#972F2A; font-size: 14px">
      <% if user_signed_in? %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, class:"btn btn-secondary btn-small", id:"small-btn", style:"color: white; font-size: 14px; margin-left: 20px" %>
      <% else %>
        <a href="<%= new_user_session_path %> " class="btn btn-primary", id="small-btn" style="color: white; font-size: 14px; margin-left: 20px">Log in</a>
      <% end %>
    </div>
    <!-- Avatar with dropdown menu -->

  </div>
</div>
