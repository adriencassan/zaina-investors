

<%= simple_form_for @project do |f| %>
  <%= f.error_notification %>
  <div class="container text-center input">
    <h2>Tell us a few words about your project</h2>
    <div class="form-inputs">
      <%= f.input :project_name, required: true %>
      <%= f.input :description, required: true %>
      <%= f.input :sector, required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Submit project" %>
    </div>
  <div>
<% end %>
