
<h1 class="card-title" style="margin: 25px">Project overview</h1>
  <h2>Description:</h2>
    <p> <%= @project.description %></p>

  <h2>Advisor(s):</h2>

    <%if @project.has_advisormember? %>
      <% @project.advisors.each do |advisor|%>
          <p> <%= advisor.full_name %> <br>
         <a style="font-weight: bold" class="link" data-toggle="modal" data-target="#myModal"> Check profile</a> </p>
          <div id="myModal" class="modal fade " tabindex="-1">
            <%=  render "profiles/profile", profile: advisor.profile  %>
          </div>
        <%end%>
      <%if current_user.is_admin? %>
        <p> <%= link_to 'Assign a different advisor',edit_project_projectmember_path(@project, role: 'Advisor'), class:"navbar-wagon-link link"%></p>
      <%end%>

    <%else%>

      <% if current_user.is_admin? %>
        <p><%= link_to 'Assign an advisor for this project', new_project_projectmember_path(@project, role: 'Advisor'), class:"navbar-wagon-link link"%> </p>
      <% elsif current_user.is_entrepreneur? %>
        <p><%= "The most relevant advisor for your project will be suggested soon" %></p>
      <%end %>

    <%end%>

  <h2>Zaina project member(s):</h2>

    <%if @project.has_zainamember? %>

      <%@project.zainas.each do |zaina|%>
        <p><%= zaina.full_name %></p>
       <%end%>

        <%if current_user.is_admin? %>
          <p><%= link_to 'Assign a different Zaina member', edit_project_projectmember_path(@project, role: 'Zaina'), class:"navbar-wagon-link link"%></p>
        <% end  %>

    <% else %>

      <% if current_user.is_admin? %>
        <p> <%= link_to 'Assign a Zaina member', new_project_projectmember_path(@project,role:'Zaina'), class:"navbar-wagon-link link"%></p>
      <% else %>
        <p><%= "A member from Zaina team will be assigned to the project" %></p>
      <%end  %>

    <%end  %>



















