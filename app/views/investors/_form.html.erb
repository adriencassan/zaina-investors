
<div class="container-form">

<%= simple_form_for @investor do |f| %>
  <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, required: true,label: "Nom de l'investisseur"  %>
      <%= f.input :localisation, required: true,label: "Localisation"  %>
      <%= f.input :investment_min, required: true,label: "Ticket minimum"  %>
      <%= f.input :investment_max, required: true,label: "Ticket maximum"  %>
      <%= f.input :operation_type, required: true, collection: ["Debt","Equity"], placeholder: "Choisir un élémenbt", label: "Type d'opération"  %>

      <label>Nature de l'investisseur :</label>
      <%= select_tag "nature", options_from_collection_for_select(Sector.all,:id,:name),  class: 'js-example-tags form-control' %>


      <div class="from-group">
      <label>Selectionnez les secteurs :</label>
      <%= select_tag "sector", options_from_collection_for_select(Sector.all,:id,:name,selected: @investor.sectors_primary.pluck(:id)), multiple: true, class: 'select2 select-sectors form-control' %>
      <label>Selectionnez les secteurs secondaires :</label>
      <%= select_tag "sector2", options_from_collection_for_select(Sector.all,:id,:name,selected: @investor.sectors_secondary.pluck(:id)), multiple: true, class: 'select2 select-sectors form-control' %>
      </div>




    </div>

    <div class="actions">
      <%= f.submit  %>
    </div>
  </div>

<% end %>

</div>


<script>
  $(document).ready(function() {
    $('.select-sectors').select2();
});
</script>

<script>
  $(".js-example-tags").select2({
  tags: true
});
</script>
