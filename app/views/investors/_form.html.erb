
<div class="main-container">


  <div class="container container-form">

    <h2 class="text-center">Formulaire investisseurs</h2>

  <div class="grid">
  <div class="row">

    <%= simple_form_for @investor do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs row">
        <%= f.input :name, required: true,label: "Nom de l'investisseur", wrapper_html: {class: "col-xs-12"}  %>

        <div class="col-xs-12">
        <%= f.input :localisation, as: :country%>
        </div>

        <div class="col-xs-3">
        <%= f.input :nature, required: true, collection: ["Individuel","Family Office","Business Angel", "Fonds de gestion d'actifs","Fonds souverain", "Fonds de capital investissement", "Entreprise Publique", "Autres"], placeholder: "Choisir un élément", label: "Nature"  %>
        </div>
        <div class="col-xs-3">
        <%= f.input :operation_type, required: true, collection: ["Debt","Equity"], placeholder: "Choisir un élément", label: "Type d'opération"  %>
        </div>
        <%= f.input :investment_min, required: true,label: "Ticket minimum (k€)", input_html: {class: "text-center"} ,wrapper_html: {class: "col-xs-3"} %>
        <%= f.input :investment_max, required: true,label: "Ticket maximum (k€)", input_html: {class: "text-center"}, wrapper_html: {class: "col-xs-3"} %>

        <div class="col-xs-6">
          <label>Selectionnez les secteurs :</label>
          <%= select_tag "sector", options_from_collection_for_select(Sector.all,:id,:name,selected: @investor.sectors_primary.pluck(:id)), multiple: true, class: 'select2 select-sectors form-control' %>
        </div>
        <div class="col-xs-6">
          <label>Selectionnez les secteurs secondaires :</label>
          <%= select_tag "sector2", options_from_collection_for_select(Sector.all,:id,:name,selected: @investor.sectors_secondary.pluck(:id)), multiple: true, class: 'select2 select-sectors form-control' %>
        </div>

        <%= f.input :comment, required: true,label: "Commentaires", as: :text, autofocus: true, input_html: {row: 5, class: "from-control-lg"}, wrapper_html: {class: "col-xs-12"} %>




      <div class="actions col-xs-6 offset-xs-3">
        <%= f.submit "Enregistrer", class: "btn btn-primary btn-form-lg" %>
        <%= link_to "Retour", :back, class: "btn btn-primary btn-form-lg"  %>
      </div>
    <% end %>
    </div>
    </div>
  </div>

</div>

<script>
  $(document).ready(function() {
    $('.select-sectors').select2();
});
</script>

