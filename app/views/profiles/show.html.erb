<div class="container text-left sign_up_box" style="width: 800px; padding: 15px">
  <h2 class="sign_up text-center"> Profile </h2>
  <div class="text-center">
    <%= cl_image_tag @profile.photo, class:"avatar", height: 300, width: 400, crop: :fill, style:"text-center" %>
  </div>
  <p style="font-weight: bold"> First Name: </p>
  <p> <%= @profile.first_name %> </p>

  <p style="font-weight: bold"> Last Name: </p>
  <p> <%= @profile.last_name  %></p>

  <p style="font-weight: bold"> Email: </p>
  <p> <%= @profile.email %></p>

  <p style="font-weight: bold"> Background: </p>
  <p> <%= @profile.background %> <a class="navbar-wagon-link link"  data-toggle="modal" data-target="#myModal">Click here to see full resume</a></p>


<div class="text-center">
  <% if current_user.is_entrepreneur? %>
    <%= link_to 'Back to my project',project_path(current_user.projects.first), class:"navbar-wagon-link link"%>
  <%elsif current_user.is_admin? || current_user.is_advisor?  %>
    <%= link_to 'Back to projects index',projects_path, class:"navbar-wagon-link link"%>
  <%end %>
  <br>
  <%= link_to 'Edit my profile',edit_profile_path(@profile), class:"navbar-wagon-link link"%>
</div>


  <!-- Modal resume -->
  <div id="myModal" class="modal fade " tabindex="-1">
   <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close btn-close" data-dismiss="modal" aria-hidden="true" id="btn-close">&times;</button>
        <h4 class="modal-title">Resume</h4>
      </div>
      <div class="modal-body">
        <%= cl_image_tag @profile.resume, height: 300, width: 400, crop: :fill %>
      </div>
      <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>


</div>

